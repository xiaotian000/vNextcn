@model User
@{ 
    ViewBag.Title = "修改密码 - " + Model.UserName;
}

<div class="container">
    <div class="cont-wrap">
        <div class="grid_9">
            <h2 class="exp-title">@ViewBag.Title</h2>
            <div class="cont-outer">
                <form asp-action="Password" asp-controller="Account" method="post">
                    <table class="detail-table no-border">
                        @if (!User.AnyRoles("Root, Master"))
                        {
                            <tr>
                                <td class="row-title">旧密码</td>
                                <td><input type="password" class="textbox" name="old" /></td>
                            </tr>
                        }
                        <tr>
                            <td class="row-title">新密码</td>
                            <td><input type="password" class="textbox" name="password" /></td>
                        </tr>
                        <tr>
                            <td class="row-title">密码重复</td>
                            <td><input type="password" class="textbox" name="confirm" /></td>
                        </tr>
                    </table>
                    <br />
                    <input type="submit" class="btn btn-default" value="保存" />
                </form>
            </div>
        </div>
        @Html.Partial("Sidebar")
    </div>
</div>