@model Prompt
@{ 
    ViewBag.Title = Model.Title;
}

<div class="row">
    <div class="col-md-8 col-sm-12 col-md-offset-2">
        <div class="card card-single card-error">
            <div class="error-block-inner">
                <h1 class="error-code"><span>@Model.StatusCode</span></h1>
                <h3>@ViewBag.Title</h3>
                <p class="message-manual">@Model.Details</p>
                @if (!string.IsNullOrEmpty(Model.RedirectUrl))
                { 
                    <a href="@Model.RedirectUrl" class="btn btn-default ripple home-link">@Model.RedirectText</a>
                }
                @if (!Model.HideBack)
                {
                    <a href="javascript:window.history.go(-1);" class="btn btn-default ripple home-link">返回上一页</a>
                }
                <a asp-controller="Home" asp-action="Index" class="btn btn-default ripple home-link">返回首页</a>
            </div>
        </div>
    </div>
</div>
